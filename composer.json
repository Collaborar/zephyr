{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "collaborar/wp-zephyr",
    "type": "library",
    "license": "GPL-3.O-only",
    "keywords": [
        "wordpress",
        "framework",
        "controller",
        "template",
        "view",
        "request",
        "response",
        "middleware",
        "wp-zephyr"
    ],
    "scripts": {
        "prod": "composer install --no-dev --classmap-authoritative --optimize-autoloader",
        "lint": "php-cs-fixer check src",
        "lint:fix": "php-cs-fixer fix -v src"
    },
    "require": {
        "php": ">=8.1",
        "roots/wordpress": "6.4.*",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.51",
        "brain/monkey": "^2.6",
        "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "WPZephyr\\": "src/"
        },
        "files": [
            "config.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WPZephyrTests\\": "tests/unit-tests",
			"WPZephyrTestTools\\": "tests/tools"
        }
    },
    "config": {
        "allow-plugins": {
            "roots/wordpress-core-installer": true
        }
    },
    "extra": {
        "wordpress-install-dir": "vendor/wordpress"
    }
}
